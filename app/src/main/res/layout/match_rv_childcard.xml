<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="@dimen/cardview_default_elevation"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:layout_marginTop="15dp"
    android:backgroundTint="@color/scoreRowBackground"
    app:cardCornerRadius="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_margin="13dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/premiereName"
            android:textSize="10sp"
            android:text="@string/seriesname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RelativeLayout
            android:layout_marginTop="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/team1"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/team1Icon"
                    android:layout_gravity="center"
                    android:background="@drawable/trophyicon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/team1Name"
                    android:layout_marginStart="12dp"
                    android:layout_gravity="center"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:text="Mumbai Indians"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/team2"
                android:layout_below="@id/team1"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/team2Icon"
                    android:layout_gravity="center"
                    android:background="@drawable/trophyicon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/team2Name"
                    android:layout_marginStart="12dp"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:text="Delhi Capitals"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <View
                android:id="@+id/divider2"
                android:layout_marginTop="15dp"
                android:layout_marginStart="40dp"
                android:layout_toRightOf="@id/team1"
                android:layout_width="1dp"
                android:layout_height="20pt"
                android:background="@color/gnt_gray"/>
            <LinearLayout
                android:visibility="visible"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:layout_marginStart="15dp"
                android:layout_toRightOf="@id/divider2"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/startStatus"
                    android:textSize="12sp"
                    android:visibility="visible"
                    android:layout_marginTop="7dp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:text="Starts at"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/status"
                    android:visibility="gone"
                    android:textSize="16dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:textStyle="bold"
                    android:textColor="@color/winDispColor"
                    android:text="@string/winTeamName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/startTime"
                    android:textColor="@color/white"
                    android:visibility="visible"
                    android:layout_marginTop="5dp"
                    android:textSize="14sp"
                    android:textAllCaps="true"
                    android:inputType="time"
                    android:text="03:15 PM"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </RelativeLayout>
        <TextView
            android:id="@+id/statusCaption"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:textSize="12sp"
            android:visibility="gone"
            android:textColor="@color/winTeamName"
            android:text="Delhi capitals win by 7 wickets"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>