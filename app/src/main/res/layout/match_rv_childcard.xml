<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="@dimen/cardview_default_elevation"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:layout_marginTop="15dp"
    android:backgroundTint="@color/scoreRowBackground"
    app:cardCornerRadius="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_margin="13dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/premiereName"
            android:textSize="10sp"
            android:text="@string/seriesname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RelativeLayout
            android:id="@+id/relativelayout"
            android:layout_below="@id/premiereName"
            android:layout_marginTop="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_marginStart="15dp"
                android:id="@+id/team1"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/team1Icon"
                    android:layout_gravity="center"
                    android:background="@drawable/trophyicon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"/>
                <TextView
                    android:id="@+id/team1Name"
                    android:layout_marginStart="12dp"
                    android:layout_gravity="center"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:text="RCB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/team2"
                android:layout_marginStart="15dp"
                android:layout_below="@id/team1"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/team2Icon"
                    android:layout_gravity="center"
                    android:background="@drawable/trophyicon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"/>
                <TextView
                    android:id="@+id/team2Name"
                    android:layout_marginStart="12dp"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:text="DC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/scores"
                android:orientation="vertical"
                android:layout_toRightOf="@id/team1"
                android:layout_marginStart="15dp"
                android:layout_marginTop="14.5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/team1Score"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:text="5-175  (17.3)"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginTop="18dp"
                    android:id="@+id/team2Score"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:text="5-175  (17.3)"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/startStat"
                android:orientation="vertical"
                android:gravity="center"
                android:visibility="gone"
                android:layout_centerHorizontal="true"
                android:layout_toRightOf="@id/scores"
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/startStatus"
                    android:textSize="12sp"
                    android:layout_marginTop="7dp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:text="Starts at"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/startTime"
                    android:textColor="@android:color/holo_green_light"
                    android:layout_marginTop="5dp"
                    android:textSize="16sp"
                    android:textAllCaps="true"
                    android:inputType="time"
                    android:text="03:15 PM"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout2"
            android:layout_width="match_parent"
            android:layout_height="96dp"
            android:layout_marginLeft="22dp"
            android:layout_toRightOf="@id/relativelayout">

            <androidx.coordinatorlayout.widget.CoordinatorLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true">

                <TextView
                    android:id="@+id/status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="11dp"
                    android:layout_marginEnd="10pt"
                    android:text="Live"
                    android:textColor="@color/live"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/isLive"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="end"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="6dp"
                    app:lottie_autoPlay="true"
                    app:lottie_fileName="live.json"
                    app:lottie_loop="true" />
            </androidx.coordinatorlayout.widget.CoordinatorLayout>
        </RelativeLayout>
        <TextView
            android:id="@+id/statusCaption"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:layout_below="@id/relativelayout"
            android:textSize="12sp"
            android:textColor="@color/winTeamName"
            android:text="Delhi capitals win by 7 wickets"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>